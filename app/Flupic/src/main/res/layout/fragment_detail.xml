<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".ui.inside.detailFragment">


    <com.github.florent37.shapeofview.shapes.ArcView android:layout_width="match_parent"
                                                     android:layout_height="200dp"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     app:shape_arc_cropDirection="outside"
                                                     app:shape_arc_height="24dp"
                                                     app:shape_arc_position="bottom"
                                                     android:id="@+id/arcView">

        <ImageView android:layout_width="match_parent"
                   tools:src="@drawable/vanilla"
                   android:layout_height="match_parent"
                   android:scaleType="centerCrop"/>

    </com.github.florent37.shapeofview.shapes.ArcView>

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dishesName"
            style="@style/TextAppearance.Flupic.HeadlineCard"
            app:layout_constraintTop_toBottomOf="@+id/arcView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:textSize="32sp"/>
    <TextView
            android:text="@string/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Flupic.AuthorCard"
            android:id="@+id/by" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/dishesName"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Flupic.AuthorCard"
            android:id="@+id/authorName" app:layout_constraintStart_toEndOf="@+id/by"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/dishesName"/>

    <View android:layout_width="320dp" android:layout_height="1dp"
          android:backgroundTint="@color/colorOnSecond"
          android:background="#57212121"
          android:id="@+id/view3"
          app:layout_constraintTop_toBottomOf="@+id/authorName"
          android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:icon="@drawable/ic_heart"
                                                       style="@style/Widget.MaterialComponents.Button.Icon"
                                                       android:layout_marginTop="8dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/arcView"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:id="@+id/likeButton" android:text="12"
                                                       android:layout_marginEnd="4dp"/>

    <View android:layout_width="1dp" android:layout_height="24dp"
          android:backgroundTint="@color/colorOnSecond"
          android:background="@color/colorOnSecond"
          android:id="@+id/view"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/arcView"
          app:layout_constraintEnd_toStartOf="@+id/likeButton"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/ic_bookmark_border_black_24dp"
                 android:tint="@color/secondaryVariantColor" android:backgroundTint="#FFFFFF"
                 android:id="@+id/saveButton"
                 app:layout_constraintTop_toBottomOf="@+id/arcView" android:layout_marginTop="8dp"
                 app:layout_constraintEnd_toStartOf="@+id/view"/>

    <TextView
            android:text="Description"
            style="@style/TextAppearance.Flupic.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="18sp"/>

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/description" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="4dp"
            android:textSize="12sp"/>

    <View android:layout_width="320dp" android:layout_height="1dp"
          android:backgroundTint="@color/colorOnSecond"
          android:background="#57212121"
          android:id="@+id/view2"
          app:layout_constraintTop_toBottomOf="@+id/date"
          android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"/>

    <View android:layout_width="1dp" android:layout_height="24dp"
          android:backgroundTint="@color/colorOnSecond"
          android:background="@color/colorOnSecond"
          android:id="@+id/view4"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:icon="@drawable/ic_por_person"
                                                       style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                                       android:id="@+id/persPerService" android:text="4 servings"
                                                       app:layout_constraintStart_toEndOf="@+id/view4"
                                                       android:layout_marginStart="8dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/view2"
                                                       android:layout_marginTop="4dp"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:icon="@drawable/ic_timer"
                                                       style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                                       android:id="@+id/cookingTime" android:text="2 hours"
                                                       app:layout_constraintEnd_toStartOf="@+id/view4"
                                                       android:layout_marginStart="8dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/view2"
                                                       android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>