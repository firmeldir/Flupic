<?xml version="1.0" encoding="utf-8"?>

<layout>
    
    <data>
        <variable name="indredient" type="String"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
                style="@style/TextAppearance.Flupic.Description"
                android:text="@{indredient}"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredient"
                android:layout_margin="4dp"/>

        <View android:layout_width="240dp" android:layout_height="1dp"
              android:backgroundTint="@color/colorOnSecond"
              android:background="#57212121"
              android:id="@+id/view2"
              android:layout_marginBottom="2dp"
              android:layout_marginTop="4dp"/>

    </LinearLayout>

</layout>

