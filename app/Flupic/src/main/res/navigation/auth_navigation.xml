<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/auth_navigation"
        app:startDestination="@id/startFragment">
    <fragment
            android:id="@+id/startFragment"
            android:name="com.example.flupic.ui.auth.StartFragment"
            android:label="fragment_start"
            tools:layout="@layout/fragment_start" >
        <action
                android:id="@+id/action_startFragment_to_signInFragment"
                app:destination="@id/signInFragment"
                app:popUpTo="@+id/startFragment"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/signInFragment"
            android:name="com.example.flupic.ui.auth.SignInFragment"
            android:label="SignInFragment" >
        <action
                android:id="@+id/action_signInFragment_to_confirmationFragment"
                app:destination="@id/confirmationFragment" />
    </fragment>
    <fragment
            android:id="@+id/confirmationFragment"
            android:name="com.example.flupic.ui.auth.ConfirmationFragment"
            android:label="fragment_confirmation"
            tools:layout="@layout/fragment_confirmation" >
        <argument
                android:name="phoneNumber"
                app:argType="string" />
    </fragment>
</navigation>