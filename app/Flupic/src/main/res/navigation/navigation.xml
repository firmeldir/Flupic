<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/authFragment">

    <fragment
            android:id="@+id/authFragment"
            android:name="com.example.flupic.ui.auth.AuthFragment"
            android:label="AuthFragment" >
        <action
                android:id="@+id/action_authFragment_to_infoSupplyFragment"
                app:destination="@id/infoSupplyFragment"
                app:popUpTo="@+id/authFragment"
                app:popUpToInclusive="true" />
        <action
                android:id="@+id/action_authFragment_to_profileFragment"
                app:destination="@id/profileFragment"
                app:popUpTo="@+id/authFragment"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.flupic.ui.profile.UserProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile_user" />
    <fragment
            android:id="@+id/infoSupplyFragment"
            android:name="com.example.flupic.ui.auth.InfoSupplyFragment"
            android:label="InfoSupplyFragment" >
        <action
                android:id="@+id/action_infoSupplyFragment_to_profileFragment"
                app:destination="@id/profileFragment"
                app:popUpTo="@+id/authFragment"
                app:popUpToInclusive="true" />
    </fragment>
</navigation>